<Window x:Class="AuthenticatorChooser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AuthenticatorChooser"
        mc:Ignorable="d"
        Title="AuthenticatorChooser" Width="491" ResizeMode="NoResize" ShowInTaskbar="False" Height="221">
    <Grid>
        <Image x:Name="icon" HorizontalAlignment="Left" Height="64" Margin="17,17,0,0" VerticalAlignment="Top" Width="64" Source="/Resources/images/warning.png"/>

        <TextBlock x:Name="message" Margin="100,29,17,103" TextWrapping="Wrap">
            FIDO on RDP server detected.<LineBreak/>
            To automatically choose the USB security key option, AuthenticatorChooser must be installed on the RDP client.
        </TextBlock>
        <DockPanel Margin="100,0,17,60" VerticalAlignment="Bottom" Height="24">
            <Button x:Name="clipboard" DockPanel.Dock="Right">
                <Image Source="/Resources/images/clipboard.png"/>
            </Button>
            <Label x:Name="downloadLink" Content="https://github.com/Aldaviva/AuthenticatorChooser/releases" Foreground="#FF001BFF" BorderBrush="#FF525252" BorderThickness="1,1,0,1" Padding="5,0,5,0" VerticalContentAlignment="Center" Cursor="Hand" />
        </DockPanel>

        <CheckBox x:Name="disallowDialog" Content="Don't show this again" HorizontalAlignment="Left" Margin="100,0,0,24" Height="15" VerticalAlignment="Bottom"/>

        <Button x:Name="ok" Content="OK" Margin="0,0,17,17" Height="28" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="94"/>
    </Grid>
</Window>
